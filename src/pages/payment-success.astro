---
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-br from-black to-gray-900 text-white px-4">
        <div class="bg-zinc-800 p-8 rounded-lg shadow-lg max-w-md w-full text-center">
            <div class="mb-6">
                <svg class="w-20 h-20 mx-auto text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold mb-4">Payment Successful!</h1>
            <p class="text-gray-400 mb-6">Thank you for your purchase. Your subscription is now active.</p>
            <div class="space-y-4">
                <a href="/account" class="block bg-purple-700 hover:bg-purple-800 text-white px-6 py-3 rounded-full transition">
                    Go to Account Dashboard
                </a>
                <a href="/" class="block text-purple-400 hover:text-purple-300 underline">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</Layout>

