---
import Layout from '../layouts/Layout.astro';
---

<Layout title="500 - Server Error">
  <main class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <h1 class="text-6xl font-bold text-red-500 mb-4">500</h1>
    <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-6">Internal Server Error</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-md">
      Something went wrong on our end. Please try again later.
    </p>
    <a 
      href="/" 
      class="px-6 py-3 bg-primary hover:bg-primary/90 text-white rounded-lg transition-colors duration-200"
    >
      Go Back Home
    </a>
  </main>
</Layout>
